#!/bin/bash

# Micrófono y Monitor en dwmbar
icon=""
icon_mute="" 
mic_volume="$(pamixer --source 5 --get-volume)%"

mic_muted=$(pamixer --source 5 --get-mute | tr -d "\n")

if [ "$mic_muted" == "true" ]
then
	printf "%s " "$icon_mute" | tr -d "\n"
else
	printf "%s%s " "$icon" "$mic_volume" | tr -d "\n"
fi

case $BUTTON in
	1) pamixer --source 5 -t && pkill -RTMIN+17 dwmblocks;
		;;
	4) pamixer --source 5 -i 2 && pkill -RTMIN+17 dwmblocks;
		;;
	5) pamixer --source 5 -d 2 && pkill -RTMIN+17 dwmblocks;
		;;
	6) "$TERMINAL" -e "$EDITOR" "$0"
		;;
esac

