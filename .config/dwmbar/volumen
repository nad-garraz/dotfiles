#!/bin/bash

case $BUTTON in
    1) setsid -f falacritty -e pulsemixer ;;
    2) pamixer -t ;;
    4) pamixer --allow-boost -i 3 && pkill -RTMIN+17 dwmblocks ;;
    5) pamixer --allow-boost -d 3 && pkill -RTMIN+17 dwmblocks ;;
    3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
        - Scroll to change." ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ "$(pamixer --get-mute)" = true ] && echo -n "ðŸ”‡" && pkill -RTMIN+17 dwmblocks && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then icon="ðŸ”ˆ"
else icon="ðŸ”‰";
fi

echo -n "$icon$vol ";
