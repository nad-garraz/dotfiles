#!/bin/sh

# A dwm_status function that displays the status of countdown.sh

dwm_countdown () {
    for f in /tmp/countdown.*; do
        if [ -e "$f" ]; then
            printf "%s" "$SEP1"
                printf "‚è≥ %s" "$(tail -1 /tmp/countdown.*)"
            printf "%s\n" "$SEP2"

            break
        fi
    done
}

dwm_countdown
