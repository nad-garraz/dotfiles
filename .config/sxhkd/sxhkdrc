#		  wyrd, notes, pulsemixer, guita
alt + shift + t ; {m,f,w,n,v,g,t}
	{tx ncmpcpp, tx lf ~, tx wyrd 180, tx notes, tx pulsemixer, tx guita_exe, terminal}

# FFMPEG related:

# Webcam
alt + shift + w ; {1,2,3,4,m}
	{webcam_toggle 1, webcam_toggle 2, webcam_toggle 3, webcam_toggle 4, webcam_dmenu}

# Screenkey, keyboard casting
alt + shift + k
	toggle_screenkey

# Capture Screen, Take ScreenShot
Print
	capture_screen

# ScreenCasting
super + s
	screencasting

# Killall ffmpeg
control + F8
	killall ffmpeg && notify-send "Se mat√≥ el ffmpeg"

# Toggle touchpad
alt + ctrl + t
	toggle_touchpad

# Change the keyboard layout
alt + shift + i ; {i,c,e}
  {layout_toggle "toggle", layout_toggle "zh", layout_toggle "spa"}
