#!/usr/bin/env bash


# Call the wallpaper script
[ -e $HOME_SCRIPTS/wallpaper ] && $HOME_SCRIPTS/wallpaper 2> $LOGS/wallpaper.log &

# Status Bar
dwmblocks &

# Notificaciones
dunst &

# Battery Notifications
[ -e $HOME_SCRIPTS/battery_notifications ] && battery_notifications 2> $LOGS/battery_notification.log 1> /dev/null &

# Hotkeys
sxhkd 2> $LOGS/sxhkd.log &1 > /dev/null &

# Compositor manager
# picom --daemon --shadow --shadow-opacity 0.5 --shadow-offset-x=5 --shadow-offset-y=-5 --shadow-color \#000000 --inactive-opacity=0.85 --frame-opacity=1 --fade-in-step=0.007 --fade-out-step=0.007 &
picom --frame-opacity=1 --fade-delta=0.2 &


# REDSHIFT
redshift 1> /dev/null 2> $LOGS/redshift.log &

# Automontar discos
udiskie &

# Para escribir en chino con el IBUS
ibus-daemon -drx &

# Swaping Caps <--> Esc
#setxkbmap -option caps:swapescape
