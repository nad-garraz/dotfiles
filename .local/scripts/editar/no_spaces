#!/bin/sh

#
#  _ __   ___     ___ _ __   __ _  ___ ___  ___
# | '_ \ / _ \   / __| '_ \ / _` |/ __/ _ \/ __|
# | | | | (_) |  \__ \ |_) | (_| | (_|  __/\__ \
# |_| |_|\___/___|___/ .__/ \__,_|\___\___||___/
#           |_____|  |_|
#
#
#  _ __   ___     ___ __ _ _ __  ___
# | '_ \ / _ \   / __/ _` | '_ \/ __|
# | | | | (_) | | (_| (_| | |_) \__ \
# |_| |_|\___/___\___\__,_| .__/|___/
#           |_____|       |_|
#

# Renombra al archivo sin espacios y sin mayusculas

mv "$1" "$(echo "$1" | tr " " "_" |
	iconv -cf UTF-8 -t ASCII//TRANSLIT |
	tr -d "(" | tr -d ")" |
	sed "s/_-_/-/g" |
	sed "s/&/and/g" |
	sed "s/__/_/g" |
	tr -d "'"  |
	tr [:upper:] [:lower:] )"
